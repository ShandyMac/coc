<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="coc.helloworld.MainActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <!--Barb-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/unit_name_width"
            android:layout_height="wrap_content"
            android:text="@string/barbarian"
            android:paddingRight="10dp"/>

        <Spinner
            android:id="@+id/spinnerBarbAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:dropDownWidth="75dp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spinnerBarbLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:dropDownWidth="75dp"
            android:gravity="center"/>
    </LinearLayout>

    <!--Archer-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/unit_name_width"
            android:layout_height="wrap_content"
            android:text="@string/archer"
            android:paddingRight="10dp"/>

        <Spinner
            android:id="@+id/spinnerArcherAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:dropDownWidth="75dp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spinnerArcherLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:dropDownWidth="75dp"
            android:gravity="center"/>
    </LinearLayout>

    <!--Giant-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/unit_name_width"
            android:layout_height="wrap_content"
            android:text="@string/giant"
            android:paddingRight="10dp"/>

        <Spinner
            android:id="@+id/spinnerGiantAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:dropDownWidth="75dp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spinnerGiantLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:dropDownWidth="75dp"
            android:gravity="center"/>
    </LinearLayout>

    <!--Goblin-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/unit_name_width"
            android:layout_height="wrap_content"
            android:text="@string/goblin"
            android:paddingRight="10dp"/>

        <Spinner
            android:id="@+id/spinnerGoblinAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:dropDownWidth="75dp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spinnerGoblinLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:dropDownWidth="75dp"
            android:gravity="center"/>
    </LinearLayout>

    <!--Total Cost and Calc buttons-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_cost"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCalculate"
        android:text="@string/calc_button"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnReset"
        android:text="@string/reset_button"
        android:layout_gravity="center"
        android:visibility="invisible"/>
</LinearLayout>

